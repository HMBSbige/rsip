{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":configMigration",
        ":automergeBranch",
        ":automergeDigest",
        ":automergeMinor",
        ":disableRateLimiting"
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true
    },
    "rangeStrategy": "update-lockfile"
}